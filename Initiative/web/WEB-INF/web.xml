<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--IOC容器路径 当tomcat启动时初始化-->
    <context-param>
        <param-name>IOCConfigPath</param-name>
        <param-value>applicationContext.xml</param-value>
    </context-param>

    <!-- 配置上下文参数 -->
    <context-param>
        <!--前缀-->
        <param-name>view-prefix</param-name>
        <param-value>/</param-value>
    </context-param>
    <context-param>
        <!--后缀-->
        <param-name>view-suffix</param-name>
        <param-value>.html</param-value>
    </context-param>

    <filter>
        <filter-name>CharacterEncoderFilter</filter-name>
        <filter-class>com.zyc.servlet.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncoderFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>TransActionsManageFilter</filter-name>
        <filter-class>com.zyc.servlet.filter.OpenTransactionManageFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TransActionsManageFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

</web-app>