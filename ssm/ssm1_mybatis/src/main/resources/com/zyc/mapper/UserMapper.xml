<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyc.mapper.UserMapper">

    <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="uid" parameterType="user">
        insert into t_user
        values (null, #{name}, #{age}, #{sex}, #{email}, #{password})
    </insert>

    <update id="updateUser" parameterType="user">
        update t_user
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="age != null">age=#{age},</if>
            <if test="email != null">email=#{email}</if>
        </set>
        where uid = #{uid}
    </update>

    <delete id="deleteById">
        delete
        from t_user
        where uid = #{userId}
    </delete>

    <delete id="deleteByIds">
        delete
        from t_user
        where uid in (${ids})
    </delete>

    <select id="getUser" resultType="user">
        select * from t_user
        <where>
            <if test="uid != null and uid != '' ">and uid=#{uid}</if>
            <if test="name != null and name != '' ">and name=#{name}</if>
            <if test="age != null and age != '' ">and age=#{age}</if>
            <if test="sex != null and sex != '' ">and sex=#{sex}</if>
        </where>
    </select>

    <select id="getUserByCondition" resultType="user">
        select * from t_user
        <where>
            <if test="uid != null">and uid=#{uid}</if>
            <if test="name != null">and name=#{name}</if>
            <if test="age != null">and age=#{age}</if>
            <if test="sex != null">and sex=#{sex}</if>
        </where>
    </select>

    <select id="getCountUser" resultType="_int">
        select count(*)
        from t_user
    </select>

    <select id="getUserToMap" resultType="Map">
        select *
        from t_user
        where uid = #{uid}
    </select>

    <select id="getUserByLike" resultType="user">
        <!--select * from t_user where name like '%${username}%'-->
        select * from t_user where name like concat('%',#{username},'%')
        <!--select * from t_user where name like "%"#{username}"#"-->
    </select>

</mapper>